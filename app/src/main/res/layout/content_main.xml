<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="test.com.demo_tablet.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="RESET" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="50dp"
        android:src="@mipmap/icon_love" />


    <View
        android:id="@+id/stick"
        android:layout_width="6dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/ivImage"
        android:layout_alignRight="@+id/ivImage"
        android:layout_marginBottom="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="100dp"
        android:background="#516582" />

    <View
        android:id="@+id/stickBackground"
        android:layout_width="6dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/stick"
        android:layout_alignRight="@+id/ivImage"
        android:layout_marginRight="44dp"
        android:background="@android:color/holo_orange_dark"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivArrowBot"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/arrow_bot"
        android:tint="#516582"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <RelativeLayout
        android:id="@+id/section_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@mipmap/sample_ava" />

    </RelativeLayout>

</RelativeLayout>
